<Page x:Class="Client.FAQ"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource GrayArea}"
      Title="FAQ">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="719">
            <TextBlock Text="Pronet." FontSize="60px" FontWeight="ExtraBold" Foreground="{DynamicResource Text}" HorizontalAlignment="Center"/>
            <TextBlock Text="Frequently Asked Questions" FontSize="20px" FontWeight="Bold" Foreground="{DynamicResource Text}" HorizontalAlignment="Center"/>
            <Border Height="100" Background="{DynamicResource BoldArea}" CornerRadius="25" Margin="10">
                <StackPanel>
                    <TextBlock Text="Q:Which attacks do we prevent" Foreground="{DynamicResource Text}" FontSize="20px" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Center"/>
                    <TextBlock Text="A: We prevent Ddos, XSS﻿, DNS Hijacking and Drive by Download Attacks .In addition, the Pronet project protects against the Smurf attack(Not the blue creatures). Those attacks are network attacks. You can find more data about them in your (now) secured internet." Foreground="{DynamicResource Text}" FontSize="15px" Height="70" TextWrapping="Wrap" Margin="5"/>
                </StackPanel>
            </Border>
            <Border Height="100" Background="{DynamicResource BoldArea}" CornerRadius="25" Margin="5">
                <StackPanel>
                    <TextBlock Text="Q:How we prevent attacks" Foreground="{DynamicResource Text}" FontSize="20px" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Center"/>
                    <TextBlock Text="A: Our first concern, is you to be safe. We use our servers to intercept the incoming
network traffic and analyze the attacks patterns. So when an attacks is happening the
traffic will be blocked while your computer is safe and sound." Foreground="{DynamicResource Text}" FontSize="15px" Height="70" TextWrapping="Wrap" Margin="5"/>
                </StackPanel>
            </Border>
            <Border Height="100" Background="{DynamicResource BoldArea}" CornerRadius="25" Margin="10">
                <StackPanel>
                    <TextBlock Text="Q:Who created this amazing protector" Foreground="{DynamicResource Text}" FontSize="20px" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Center"/>
                    <TextBlock Text="A: Thank you, this amazing project was created by Yoav Levy and Boaz Sarel. 
We created this protector to make sure that your internet will be completely secured .
Thank you for downloading Pronet. Please support Pronet in discord." Foreground="{DynamicResource Text}" FontSize="15px" Height="70" TextWrapping="Wrap" Margin="5"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
