<Page x:Class="Client.AttacksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      xmlns:mahApps="http://metro.mahapps.com/winfx/2009"
      xmlns:System="clr-namespace:System;assembly=mscorlib"

      Background="#323234"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AttacksPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <!--#region title-->
            <TextBlock Text="Pronet." FontSize="60px" FontWeight="ExtraBold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Attacks" FontSize="20px" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center"/>
            <!--#endregion-->

            <!--#region queries-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <!--#region search attacker ip-->
                    <Border Height="50" Width="300" CornerRadius="25" Background="#212120">
                        <Grid>
                            <!-- The text typed -->
                            <TextBox Width="280" VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="SearchIPTextBox" Margin="5" Foreground="White" FontSize="20px"/>
                            <!--Hint texy-->
                            <TextBlock IsHitTestVisible="False" Text="Search Attacker IP" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                                <!--Change the hint text with the typed one-->
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchIPTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                    <!--#endregion-->

                    <!--#region Attack type-->
                    <Border Height="50" Width="300" CornerRadius="25" Background="#212120" Margin="0 10">
                        <Grid>
                            <!--#region Combo box selection-->
                            <ComboBox Name="attackTypeComboBox" Width="290">
                                <ComboBoxItem Content="DDoS" />
                                <ComboBoxItem Content="Drive by download" />
                                <ComboBoxItem Content="Smurf" />
                                <ComboBoxItem Content="DNS hijacking" />
                                <ComboBoxItem Content="XSS" />
                            </ComboBox>
                            <!--#endregion-->

                            <!--#region hint text-->
                            <TextBlock IsHitTestVisible="False" Text="Attack Type" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=attackTypeComboBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <!--#endregion-->

                        </Grid>

                    </Border>
                    <!--#endregion-->
                    
                    <!--#region dates-->
                    <StackPanel Orientation="Horizontal">
                        <Image Source="icons/Calender.png" Height="100" Width="100" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Start Date:" Foreground="White" FontSize="20px" FontWeight="Light" HorizontalAlignment="Center"/>
                            <Border Height="50" Width="200" CornerRadius="25" Background="#212120" VerticalAlignment="Top">
                                <DatePicker Width="150" Height="40" Text="fffff" FontSize="20px" Style="{DynamicResource {x:Type DatePicker}}" />
                            </Border>
                            <TextBlock Text="End Date:" Foreground="White" FontSize="20px" FontWeight="light" HorizontalAlignment="Center"/>
                            <Border Height="50" Width="200" CornerRadius="25" Background="#212120" Margin="05">
                                <DatePicker Width="150" Height="40" FontSize="20px" Style="{DynamicResource {x:Type DatePicker}}" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <!--#endregion-->
                    
                    <Button Content="Search:" Foreground="Gray" Background="Black" Width="190" BorderBrush="Transparent" BorderThickness="0" Margin="0 10"/>
                </StackPanel>
                <!--#region filtered attacks-->
                <Grid Grid.Column="1" Margin="0 10">
                    <Rectangle Fill="#212120" Height="300px" RadiusX="10" RadiusY="10" Margin="21,0,21,0"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Attacks" FontWeight="ExtraBlack" Foreground="White" FontSize="20px" HorizontalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal" Margin="20">
                            <TextBlock Text="Type" Foreground="White" FontSize="20px" FontWeight="Bold" TextDecorations="Underline" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                            <TextBlock Text="Attacker IP" Foreground="white" FontSize="20px" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Center" Margin="100,0,0,0"/>
                            <TextBlock Text="Date" Foreground="white" FontSize="20px" FontWeight="Bold" TextDecorations="Underline" HorizontalAlignment="Right" Margin="120,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <!--#endregion-->
            </Grid>
            <!--#endregion-->
            
        </StackPanel>
    </Grid>
</Page>
